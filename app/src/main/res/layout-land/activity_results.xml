<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dodrio.finalproject.ResultsActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:id="@+id/linearLayout">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:paddingBottom="10dp"
            android:textSize="22sp"
            android:id="@+id/query" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingBottom="10dp">


            <TextView
                android:text="Joy"
                android:textSize="26sp"
                android:gravity="start"
                android:layout_width="130dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:id="@+id/joytitle"/>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/joybar"
                android:layout_centerHorizontal="true"
                android:scaleY="5"
                android:layout_width="wrap_content"
                android:layout_weight="0.8"
                />

            <TextView
                android:text="100%"
                android:textSize="26sp"
                android:gravity="end"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/joypercent"
                android:layout_weight="0.1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingBottom="10dp">


            <TextView
                android:text="Fear"
                android:textSize="26sp"
                android:gravity="start"
                android:layout_width="130dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:id="@+id/feartitle"/>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/fearbar"
                android:layout_centerHorizontal="true"
                android:scaleY="5"
                android:layout_width="wrap_content"
                android:layout_weight="0.8"
                android:elevation="1dp" />

            <TextView
                android:text="66%"
                android:textSize="26sp"
                android:gravity="end"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/fearpercent"
                android:layout_weight="0.1"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingBottom="10dp">


            <TextView
                android:text="Disgust"
                android:textSize="26sp"
                android:gravity="start"
                android:layout_width="130dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:id="@+id/disgusttitle"/>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/disgustbar"
                android:layout_centerHorizontal="true"
                android:scaleY="5"
                android:layout_width="wrap_content"
                android:layout_weight="0.8"
                />

            <TextView
                android:text="100%"
                android:textSize="26sp"
                android:gravity="end"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/disgustpercent"
                android:layout_weight="0.1"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingBottom="10dp">


            <TextView
                android:text="Anger"
                android:textSize="26sp"
                android:gravity="start"
                android:layout_width="130dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:id="@+id/angertitle"/>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/angerbar"
                android:layout_centerHorizontal="true"
                android:scaleY="5"
                android:layout_width="wrap_content"
                android:layout_weight="0.8"
                />

            <TextView
                android:text="100%"
                android:textSize="26sp"
                android:gravity="end"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/angerpercent"
                android:layout_weight="0.1"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingBottom="10dp">


            <TextView
                android:text="Sadness"
                android:textSize="26sp"
                android:gravity="start"
                android:layout_width="130dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:id="@+id/sadnesstitle"/>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/sadnessbar"
                android:layout_centerHorizontal="true"
                android:scaleY="5"
                android:layout_width="wrap_content"
                android:layout_weight="0.8" />

            <TextView
                android:text="100%"
                android:textSize="26sp"
                android:gravity="end"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/sadnesspercent"
                android:layout_weight="0.1"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="26sp"
        android:id="@+id/language_tone" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/language_tone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="26sp"
        android:id="@+id/emotional_range" />

</RelativeLayout>
